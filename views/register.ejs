<link rel="stylesheet" type="text/css" href="/css/style.css" />

<% if('undefined' !== typeof user ) {var isD= true;} %>
<% var sty= "style='display:none'" %>

<h1><%=isD?'Edit user: ' + user.name: 'Register new user' %></h1>

<form action=<%=isD ? "/register/" + user.id : '/register' %> method="POST">
<div <%=isD? '': 'hidden' %> >
    <label for= "oldId">Id</label >
    <input readonly="readonly" type="text" id="oldId" name ="oldId" value= <%=isD?user.id: 'auto_value' %> >

</div>
<div>
    <label for= "Name">Name</label>
    <input type="text" id="name" name ="name" required value= <%=isD?user.name: '' %> >

</div>
<div>
    <label for= "email">Email</label>
    <input type="email" id="email" name ="email" required value= <%=isD?user.email: '' %> >

</div>
<div  <%=isD ? "hidden" : "" %> >
    <label for= "password">Password</label>
    <input type="password" id="password" name ="password"  <%=isD ? 'disabled' : '' %>>

</div>
<div  <%=isD ? "" : "hidden" %> >
    <label for= "password">Generation count</label>
    <input type="number" id="genCount" name ="genCount"  <%=isD ? '' : 'disabled' %>  value= <%=isD?user.genCount: '' %>  >

</div>
<button type="submit">Register</button>

</form>
<a href="/admin">Return to admin panel</a>
