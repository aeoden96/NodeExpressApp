<% if('undefined' !== typeof user ) {var isD= true;} %>
<% var sty= "style='display:none'" %>

<h1>Register <%=isD?user.name: '' %></h1>

<form action=<%=isD ? "/register/" + user.id : '/register' %> method="POST">
<div  <%=isD ? " " : sty %> >
    <label for= "oldId">Id</label >
    <input readonly="readonly" type="text" id="oldId" name ="oldId" value= <%=isD?user.id: '' %> >

</div>
<div>
    <label for= "Name">Name</label>
    <input type="text" id="name" name ="name" required value= <%=isD?user.name: '' %> >

</div>
<div>
    <label for= "email">Email</label>
    <input type="email" id="email" name ="email" required value= <%=isD?user.email: '' %> >

</div>
<div>
    <label for= "password">Password</label>
    <input type="password" id="password" name ="password" required <%=isD ? 'disabled' : '' %>>

</div>
<button type="submit">Register</button>

</form>
<a href="/admin">Return to admin panel</a>
